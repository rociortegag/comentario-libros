extends layout

block content

  script(src="jquery-1.6.4.min.js")
  script(src="view.index.js")

  #left-column.column
    h2 Libros
    ul#libros
      each libro in libros
        li(class='libro-name')
          a(href='#') #{libro}

  #right-column.column
    h2 Sinopsis
    ul#facts
    label(for="new-fact") Introduce tu opinion:
    textarea#new-fact
    a(id='add-new-fact', href='#') Publicar mi opinion.
